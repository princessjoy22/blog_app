<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th>Writer</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.body %></td>
                <td><%= article.writer_name %></td>
                <td><%= link_to "See article", article_path(article) %></td>
            </tr>
        <% end %>
        
    </tbody>
</table>

<div>
    <%= link_to "New article", new_article_path %>
</div>

